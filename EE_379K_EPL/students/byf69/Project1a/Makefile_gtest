GTEST_DIR = ../../../gtest
GTEST_INC = $(GTEST_DIR)/include

#choose based on system
GTEST_LIB = $(GTEST_DIR)/lib/gtest64.a
#GTEST_LIB = $(GTEST_DIR)/lib/gtest32.a

CXX = g++
CXXFLAGS = -g -I $(GTEST_INC) -std=c++11 -Wall -Werror -fmax-errors=1 -Wno-sign-compare
DEFS?= -DPHASE_A

SRCS = $(shell ls *.cpp)
OBJS = $(patsubst %.cpp, %.o, $(SRCS))
DEPS = $(patsubst %.cpp, %.d, $(SRCS))
TEST = vector_unittest

all: $(TEST)

test: $(TEST)
	@./$(TEST)

$(TEST): $(OBJS)
	$(CXX) $^ $(EXTRA_TESTS) $(GTEST_LIB) $(DEFS) $(CXXFLAGS) -pthread -o $@

#<Automatic Dependency Generation>
-include $(DEPS)

%.d: %.cpp
	@$(CXX) $< $(CXXFLAGS) -MM > $@

%.o: %.d
	$(CXX) $*.cpp $(DEFS) $(CXXFLAGS) -c -o $@
#<\Automatic Dependency Generation>

clean:
	-rm -rf *.o *d $(TEST) 
